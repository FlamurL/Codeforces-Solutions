#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main() {
    int t;
    cin>>t;
    while(t--){
        ll n,k,x;
        cin>>n>>k>>x;
        ll sum=k*(k+1)/2;
        ll maxSum=(n*(n+1)-(n-k)*(n-k+1))/2;
        if(sum>x||maxSum<x){
            cout<<"NO";
        }
        else
        cout<<"YES";
    cout<<endl;
    }
  
}
