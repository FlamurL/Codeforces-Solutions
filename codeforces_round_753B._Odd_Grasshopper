#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    int t;
    cin>>t;
        while(t--)
        {
                 ll n,x;
                 cin>>x>>n;
                ll a=0;
                 if(n%4==1){ 
      
                 a=-n;
                    if(x&1)
                 cout<<x-a<<endl;
                 else
                 cout<<x+a<<endl;
                 }
                 else if(n%4==2){ 
                                         
                 a=1;
                    if(x&1)
                 cout<<x-a<<endl;
                 else
                 cout<<x+a<<endl;
                 }
                 else if(n%4==3){ 
                                         
                 a=n+1;
   if(x&1){
 
                 cout<<x-a<<endl;
   }
                 else{ 
                 cout<<x+a<<endl;
                 }
                 }
                 else { 
                 if(x&1)
                 cout<<x-a<<endl;
                 else
                 cout<<x+a<<endl;
                 }
        }
    return 0;
}
