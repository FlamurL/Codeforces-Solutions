#include <iostream>
using namespace std;
int main() {
    int t;
    cin>>t;
    while(t--){ 
int a,b;
cin>>a>>b;
if(b%2==0){
    if(a%2==0)
    cout<<"YES";
    else cout<<"NO";

}
else{
    if(a<2){
        cout<<"NO";
    }
    else{
        if( (a-2)%2==0)
        cout<<"YES";
        else cout<<"NO";
    }
}
cout<<endl;
    }
}
